@{
    ViewData["Title"] = "ThirtyOne Game";
}

<div class="text-center">
    <h1 class="display-5">Thirty One Card Game</h1>
    <p>Enter your name and click button to start playing</p>

    <form asp-action="New" asp-controller="Game" method="get">

        <div class="form-group">
            <label class="sr-only" for="PlayerName">Your name</label>
            <input type="text" name="PlayerName" class="form-control" placeholder="Enter your name" />
        </div>
        <div class="form-group">
            <button class="btn btn-dark">New game</button>
        </div>
    </form>
</div>
