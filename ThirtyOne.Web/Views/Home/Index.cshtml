@{
    ViewData["Title"] = "ThirtyOne Game";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <form asp-action="New" asp-controller="Game" method="get">

        <div class="form-group">
            <label for="PlayerName">Email address</label>
            <input type="text" name="PlayerName" class="form-control" placeholder="Enter name" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary">New game</button>
        </div>
    </form>
</div>
