@using ThirtyOne.Shared.Helpers
@using ThirtyOne.Web.Helpers
@model ThirtyOne.Shared.Models.Game
@{
    ViewData["Title"] = "GameOver";
}
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-5">Game Over - @Model.Winner.Name won!</h1>
        <p class="lead">Thanks for playing!</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-11">
            @foreach (var p in Model.Players.OrderByDescending(p => p.Hand.CalculateScore()))
            {
                <h3>@p.Name: @p.Hand.CalculateScore() points</h3>
                <div class="row">
                    @foreach (var c in p.Hand)
                    {
                        <img src="~/images/Cards/@c.GetImageName()" class="playingcard" />
                    }
                </div>
            }
            </div>
        </div>
    </div>